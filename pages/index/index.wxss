.box{
    display: flex;
    justify-content: space-between;
    padding: 40rpx 40rpx

  }
  .icon{
    vertical-align: middle;
    margin-left: 20rpx
  }
  .text{
    display: inline-block;
    width: 100rpx;
    line-height: 60rpx;
    text-align: center;
    border: #eee solid 6rpx;
    border-radius: 20rpx
  }
  .img{
    width: 220rpx;
    height: 320rpx;
  }
  .box1{
    display: flex
  }
  .box2{
    text-align: center;
    font-size: 26rpx;
  }
  .box3{
    position: relative
  }
  .box4{
    position: absolute;
    right: 15rpx;
    top: 0
  }